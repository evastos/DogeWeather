<?xml version="1.0" encoding="utf-8"?>
<com.evastos.dogeweather.view.WeatherForecastLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:weightSum="6">

    <TextView
        android:id="@+id/text_view_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:layout_weight="1"
        android:textStyle="bold"
        android:singleLine="true" />

    <ImageView
        android:id="@+id/image_view_weather_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:layout_marginTop="6dp"
        android:layout_weight="2" />


    <TextView
        android:id="@+id/text_view_temperature_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:textColor="@color/gray"
        android:layout_weight="1"
        android:singleLine="true" />

    <TextView
        android:id="@+id/text_view_temperature_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textStyle="bold"
        android:textColor="@color/dark_blue"
        android:layout_weight="1"
        android:singleLine="true" />

</com.evastos.dogeweather.view.WeatherForecastLayout><!-- From: file:/C:/Users/Eva/Documents/GitHub/DogeWeather/DogeWeather/app/src/main/res/layout/layout_weather_forecast.xml -->